<? if ($this->recommendations): ?>
  <div id="bx-recommendations" class="bx-recommendations">
    <h4><?=$this->transEsc('bX Recommendations')?></h4>
    <ul class="list-group">
      <? foreach ($this->recommendations as $item): ?>
        <li class="list-group-item">

          <?if (!empty($item['openurl'])): ?>
            <a href="<?=$this->escapeHtmlAttr($item['openurl'])?> target="_blank"><?=$this->escapeHtml($item['atitle'])?></a>
          <? else: ?>
            <?=$this->escapeHtml($item['atitle'])?>
          <? endif; ?>
          <? if (!empty($item['authors'])): ?>
            <?=implode('<br/>', array_map($this->escapeHtml, $item['authors']));?>
          <? endif; ?>
          <? if (!empty($item['date'])): ?>
            (<?=$this->escapeHtml($item['date'])?>)
          <? endif; ?>
        </li>
      <? endforeach; ?>
    </ul>
  </div>
<? endif; ?>
